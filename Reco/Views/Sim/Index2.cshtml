@using Reco.Models;
@model Reco.Models.SimModel

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Similaritatea cu ceilalti utilizatori</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="col-sm-3">
                    <h4>Primul user</h4>
                    @foreach (var prod in Model.ProductsUser1)
                    {
                        <div class="col-sm-12">
                            <div class="brief text-warning"><i style="color:red">@(prod)</i></div>
                        </div><br/>
                        <hr />
                    }
                </div>
                <div class="col-sm-3">
                    <h4>Al doilea user</h4>
                    @foreach (var prod in Model.ProductsUser2)
                    {
                        <div class="col-sm-12">
                            <div class="brief text-warning"><i style="color:red">@(prod)</i></div>
                        </div><br/><hr/>
                    }
                </div>
                <div class="col-sm-6"></div>
            </div>
        </div>
    </div>
</div>
