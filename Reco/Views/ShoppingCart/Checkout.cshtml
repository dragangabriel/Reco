@using Reco.Models;
@model Reco.Models.ShoppingCartModel
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <p class="text-center"><code>Finalizare comanda</code></p>
                <div class="table-responsive">
                    <table class="table table-striped jambo_table bulk_action">
                        <thead>
                            <tr class="headings">
                                <th class="column-title"></th>
                                <th class="column-title">Nume Produs</th>
                                <th class="column-title">Cantitate </th>
                                <th class="column-title">Pret </th>
                                <th class="bulk-actions" colspan="7">
                                    <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr class="even pointer">
                                    @if (item.ImageUrl != null)
                                    {
                                        <td class="user-profile"><img src="/images/@item.ImageUrl" alt="Profile Image" /></td>
                                    }
                                    else
                                    {
                                        <td class="user-profile"><img src="/images/product.jpg" alt="Profile Image" /></td>
                                    }
                                    <td class=" ">@item.ProductName</td>
                                    <td class=" ">@item.Cantity buc.</td>
                                    <td class=" ">@item.ProductPrice RON</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td></td>
                                <td></td>
                                <td class="text-success"><strong>Pret total:</strong></td>
                                <td class="text-success"><strong>@Model.TotalPrice RON</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="row text-center text-warning">
                        <div class="col-md-12"><strong>Plata se va face cash, la livrare.</strong></div>
                    </div><br />
                    <div class="row text-center text-warning">
                        <div class="col-md-12"><strong>Livrarea este gratuita si se va realiza prin curier.</strong></div>
                    </div><br /><br />
                    <div class="row">
                        <div class="col-md-12">
                            @using (Html.BeginForm("Success", "ShoppingCart", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                            {
                                <div class="form-group">
                                    <label for="numarTelefon" class="control-label col-md-3 col-sm-3 col-xs-12">
                                        Numar telefon <span class="required"></span>
                                    </label>
                                    <div class="col-md-9 col-sm-9 col-xs-12">
                                        <input type="text" id="numarTelefon" class="form-control" name="numarTelefon" placeholder='Numar de telefon' />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                        Adresa de livrare <span class="required"></span>
                                    </label>
                                    <div class="col-md-9 col-sm-9 col-xs-12">
                                        <textarea id="adresa" name="adresa" class="form-control" rows="3" placeholder='Adresa de livrare'></textarea>
                                    </div>
                                </div>
                                if (ViewBag.Error != null)
                                {
                                    <div class="text-center text-danger">
                                        @ViewBag.Error
                                    </div><br />
                                }
                                <div class="form-group">
                                    <input type="submit" value="Finalizeaza comanda" class="btn btn-success btn-block" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>