@using Reco.Models;
@model Reco.Models.IndexSalesModel

<link href="/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
<link href="/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet">
<link href="/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet">
<link href="/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
<link href="/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">


<div class="row">
    <div class="col-md-12">
        <div class="" role="tabpanel" data-example-id="togglable-tabs">
            <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                <li role="presentation" class="active">
                    <a href="#vanzariGenerale" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Vanzari generale</a>
                </li>
                <li role="presentation" class="">
                    <a href="#vanzariProduse" role="tab" id="profile-tab" data-toggle="tab" aria-expanded="false">Vanzari produse</a>
                </li>
            </ul>
            <div id="myTabContent" class="tab-content">
                <div role="tabpanel" class="tab-pane fade active in" id="vanzariGenerale" aria-labelledby="home-tab">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                                <table id="datatable-buttons" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Nr. Comanda</th>
                                            <th>Nume</th>
                                            <th>Adresa</th>
                                            <th>Telefon</th>
                                            <th>Pret</th>
                                            <th>Data vanzarii</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var sale in Model.Sales)
                                        {
                                            <tr>
                                                <td>@sale.Id</td>
                                                <td>@sale.User.Forename @sale.User.Surname</td>
                                                <td>@sale.Address</td>
                                                <td>@sale.Phone</td>
                                                <td>@sale.Price</td>
                                                <td>@sale.CreatedDate</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="vanzariProduse" aria-labelledby="profile-tab">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                                <table id="datatable-fixed-header" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Nr. Comanda</th>
                                            <th>User</th>
                                            <th>Produs</th>
                                            <th>Cantitate</th>
                                            <th>Data vanzarii</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var saleItem in Model.SaleItems)
                                        {
                                            <tr>
                                                <td>@saleItem.Sale.Id</td>
                                                <td>@saleItem.User.Forename @saleItem.User.Surname</td>
                                                <td>@saleItem.Product.Nume</td>
                                                <td>@saleItem.Quantity</td>
                                                <td>@saleItem.CreatedDate</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
